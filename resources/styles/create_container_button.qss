QPushButton {
    background-color: #2196F3;  
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    font-size: 14px;
    text-transform: uppercase;
}

QPushButton:hover {
    background-color: #1976D2;  
}

QPushButton:pressed {
    background-color: #1565C0;  
}
